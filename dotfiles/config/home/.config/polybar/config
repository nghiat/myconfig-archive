[colors]
; Base colors from .Xresources
bg          =  #88000000
bg-alt      =  #aa000000
fg          =  #fff
fg-alt      =  #88ffffff
red         =  #ff0000
red-alt     =  #88ff0000
green       =  #0f0
green-alt   =  #8800ff00
yellow      =  #ff0
yellow-alt  =  #88ffff00
blue        =  #3399ff
blue-alt    =  #883399ff
magenta     =  #f0f
magenta-alt =  #88ff00ff
cyan        =  #0ff
cyan-alt    =  #8800ffff
white       =  #fff
white-alt   =  #88ffffff

[bar/mybar]
width = 100%
height = 36
font-0 = "SourceCodePro-Bold:size=12;0"
font-1 = "FontAwesome:size=12;0"
padding-right = 1
module-margin-right = 1
line-size = 3
background =${colors.bg}
foreground =${colors.fg}
modules-left = i3
modules-center = date
modules-right = redshift dropbox ibus cpu memory network volume battery
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
label-mode-foreground = #000
label-mode-background = ${colors.bg}
label-focused-padding = 1
label-focused-background = ${colors.bg-alt}
label-focused-underline = ${colors.white-alt}
label-unfocused-padding = 1

[module/date]
type = internal/date
interval = 1.0
date = %H:%M %m-%b-%Y

[module/temperature]
type = internal/temperature
interval = 1.0
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input
warn-temperature = 65
format-prefix = " "
format-prefix-foreground = ${colors.blue-alt}
label-warn-foreground = ${colors.red}
format-underline = ${colors.blue-alt}
format-warn-underline = ${colors.red-alt}

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.fg-alt}
format-underline = ${colors.green-alt}

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.fg-alt}
format-underline = ${colors.yellow-alt}
label = %gb_used%/%gb_total%

[module/battery]
type = internal/battery

full-at = 99

battery = BAT0
adapter = ADP1

poll-interval = 5
format-charging =  <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-charging = %percentage%%
label-discharging = %percentage%%
label-charging-foreground = ${colors.fg}
ramp-capacity-foreground = ${colors.green-alt}
ramp-capacity-0-foreground = ${colors.red-alt}
ramp-capacity-1-foreground = ${colors.red-alt}
ramp-capacity-2-foreground = ${colors.yellow-alt}

label-full = Fully charged
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
bar-capacity-width = 10

[module/keyboard]
type = internal/xkeyboard
format = <label-layout> <label-indicator>

[module/ibus]
type = custom/script
exec = ~/myconfig/dotfiles/config/home/.config/polybar/ibus.sh
interval = 1
format-underline = ${colors.cyan-alt}

[module/redshift]
type = custom/script
exec = ~/myconfig/dotfiles/config/home/.config/polybar/redshift.sh
interval = 10
format-underline = ${colors.yellow-alt}

[module/dropbox]
type = custom/script
exec = ~/myconfig/dotfiles/config/home/.config/polybar/dropbox.sh
format-underline = ${colors.blue-alt}
interval = 5

[module/volume]
type = internal/volume

format-volume = <label-volume>
label-volume = " %percentage%%"
label-volume-foreground = ${colors.fg}
label-muted = " %percentage%%"
label-muted-foreground = ${colors.red}

[module/network]
type = internal/network
interface = wlp2s0
interval = 3.0
format-connected =  <label-connected>
label-connected = %essid%